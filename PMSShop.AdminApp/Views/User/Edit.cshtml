@model PMSShop.ViewModels.System.Users.UserUpdateRequest
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <a asp-action="Index" class="btn btn-success btn-icon-split">
        <span class="icon text-white-50">

            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Back to list user</span>
    </a>
    <div class="row mt-4">
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Edit Account @Model.UserName</div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">

                        <!-- Form Row-->
                        <div class="form-row">
                            <!-- Form Group (first name)-->
                            <div class="form-group col-md-6">
                                <label class="small mb-1" asp-for="FirstName">First name</label>
                                <input class="form-control" asp-for="FirstName" type="text" placeholder="Enter your first name" />
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="form-group col-md-6">
                                <label class="small mb-1" asp-for="LastName">Last name</label>
                                <input class="form-control" asp-for="LastName" type="text" placeholder="Enter your last name" />
                            </div>
                        </div>

                        <!-- Form Group (email address)-->
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email">Email address</label>
                            <input class="form-control" asp-for="Email" placeholder="Enter your email address" />
                        </div>
                        <!-- Form Row-->
                        <div class="form-row">
                            <!-- Form Group (phone number)-->
                            <div class="form-group col-md-6">
                                <label class="small mb-1" asp-for="PhoneNumber">Phone number</label>
                                <input class="form-control" asp-for="PhoneNumber" type="tel" placeholder="Enter your phone number" />
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="form-group col-md-6">
                                <label class="small mb-1" asp-for="Dob">Birthday</label>
                                <input class="form-control" asp-for="Dob" type="text" name="birthday" placeholder="Enter your birthday" />
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="submit">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>