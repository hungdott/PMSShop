@model PMSShop.ViewModels.System.Users.RegisterRequest

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <a asp-action="Index" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
             
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Back to list user</span>
        </a>
        <div class="my-2"></div>
        <div class="card o-hidden border-0 shadow-lg ">
            <div class="row">
                <div class="col-sm-8">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->

                        <div class="row">

                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Create New User</h1>
                                    </div>
                                    <form class="user" asp-action="Create">
                                        <div class="form-group row">
                                            <div class="col-sm-4 mb-3 mb-sm-0">
                                                <input type="text" class="form-control form-control-user" asp-for="FirstName" placeholder="First Name">
                                            </div>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control form-control-user" asp-for="LastName" placeholder="Last Name">
                                            </div>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control form-control-user" asp-for="PhoneNumber" placeholder="Phone number">

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6">
                                                <input type="email" class="form-control form-control-user" asp-for="Email" placeholder="Email Address">
                                            </div>
                                            <div class="col-sm-6">
                                                <input class="form-control form-control-user" asp-for="Dob" placeholder="Birthday">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" asp-for="UserName" placeholder="User Name">
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                <input type="password" class="form-control form-control-user" asp-for="Password" placeholder="Password">
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="password" class="form-control form-control-user" asp-for="ConfirmPassword" placeholder="Repeat Password">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Register User
                                        </button>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

